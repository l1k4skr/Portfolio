---
// Asegúrate de recibir 'button_link' como una de las propiedades, si aún no está definido.
const { title, text, alt, button_link, img } = Astro.props;
console.log(title);
console.log(button_link);
---

<div class="rounded-lg border bg-card text-card-foreground shadow-sm w-full" data-v0-t="card">
    <img
        src={img}
        width="550"
        height="310"
        alt={alt}
        class="mx-auto aspect-video overflow-hidden rounded-t-xl object-cover object-center"
    />
    <div class="p-4">
        <h3 class="text-lg font-semibold">{title}</h3>
        <p class="text-muted-foreground">
            {text}
        </p>
        <!-- Botón que enlaza a GitHub o a otra página relevante -->
        <a
            href={button_link}
            class="inline-block mt-4 px-6 py-2 text-sm font-medium leading-6 text-center text-white transition bg-[#010409] rounded-md hover:bg-[#062047] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
            target="_blank"
            rel="noopener noreferrer"
        >
            Ver en GitHub
        </a>
    </div>
</div>
