---
const {title, text, alt, button_link, img} = Astro.props;
---

<div class="card cards">
    <img src={img} class="card-img-top" alt={alt}/>
    <div class="card-body">
        <h5 class="card-title">{title}</h5>
        <p class="card-text">
            {text}
        </p>
        <a href={button_link} class="btn btn-primary">Go to proyect</a>
    </div>
</div>

<style>
    img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }
</style>